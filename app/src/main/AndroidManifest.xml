<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.swp_challenge" >

    <uses-permission android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Swp_challenge" >
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/menu" />

        <activity android:name=".ChallengePopupActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/> // android:theme="@android:style/Theme.Dialog"  //popup 액티비티 dialog로 변경
        <activity android:name=".PlanPopupActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>
        <activity android:name=".PopupBoxActivity"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>
        <activity android:name=".SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity2" />
        <activity android:name=".MainActivity" />

        <receiver android:name=".PlannerWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/planner_widget_info" />
        </receiver>

        <activity android:name=".BoxActivity" />
        <activity android:name=".CalendarActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ChallhistoryActivity" />
        <activity android:name=".AchivementActivity" />
    </application>

</manifest>
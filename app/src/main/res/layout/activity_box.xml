<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoxActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1ABC9C"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/img_cal_main"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:foreground="@drawable/calendar"
            app:backgroundTint="#00FFFFFF"
            tools:srcCompat="@drawable/calendar" />

        <Button
            android:id="@+id/img_box_main"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:foreground="@drawable/box"
            app:backgroundTint="#00FFFFFF"
            tools:srcCompat="@drawable/box" />

        <Button
            android:id="@+id/img_setting_main"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:foreground="@drawable/settings"
            app:backgroundTint="#00FFFFFF"
            tools:srcCompat="@drawable/settings" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="#E0E0E0E0"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1ABC9C"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/img_cal_main"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:foreground="@drawable/calendar"
            app:backgroundTint="#00FFFFFF"
            tools:srcCompat="@drawable/calendar" />

        <Button
            android:id="@+id/img_box_main"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:foreground="@drawable/box"
            app:backgroundTint="#00FFFFFF"
            tools:srcCompat="@drawable/box" />

        <Button
            android:id="@+id/img_setting_main"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:foreground="@drawable/settings"
            app:backgroundTint="#00FFFFFF"
            tools:srcCompat="@drawable/settings" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/smile" />

        <EditText
            android:id="@+id/text_curAchi_main"
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#1ABC9C"
            android:text="TextView" />

        <EditText
            android:id="@+id/text_Curdate_main"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="3월 12일 금요일"
            android:inputType="date" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/layout_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_Plan_main"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="일정"
                android:textColor="#19B55D"
                android:textSize="24sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_plan_main"
                android:layout_width="300dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp">

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/button_detail_main"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/layout_bg"
                android:gravity="center"
                android:text="자세히보기"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:backgroundTint="#1ABC9C" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/layout_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_Chall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="도전과제"
                android:textColor="#18B55C"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img_key_main"
                android:layout_width="255dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/key" />

            <TextView
                android:id="@+id/text_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REWARD!!"
                android:textColor="#18B55C"
                android:textSize="18sp" />

            <ProgressBar
                android:id="@+id/progressBar_reward_main"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_Chall_main"
                android:layout_width="297dp"
                android:layout_height="121dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/button_Addchall_main"
                android:layout_width="51dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="+"
                android:textSize="24sp"
                app:backgroundTint="#1ABC9C" />

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>